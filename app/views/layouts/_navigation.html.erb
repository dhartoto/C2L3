<%= link_to "Postit!", root_path, class: 'brand' %>
<ul class="nav">
  <li class="dropdown">
    <a href='#' class="dropdown-toggle" data-toggle="dropdown">
      Category
      <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <% Category.all.each do |category| %>
        <li><%= link_to category.name, category_path(category) %></li>
      <% end %>
      <% if logged_in? %>
        <li class='divider'></li>
        <li>
          <%= link_to(categories_path) do %>
            Edit Category
          <% end %>
        </li>
        <li class='divider'></li>
        <li>
          <%= link_to(new_category_path) do %>
            <i class='icon-plus'></i>
            New Category
          <% end %>
        </li>  
      <% end %>
    </ul>
  </li>
</ul>

<ul class="nav pull-right">
  <% if logged_in? %>
    <li class="btn-info btn-mini"><%= link_to 'New Post', new_post_path %></li>

    <li class="dropdown">
      <a href='#' class="dropdown-toggle" data-toggle="dropdown">
        <%= current_user.username %>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li>
          <%= link_to user_path(session[:user_id]) do %>
            <i class="icon-user"></i>         
            Activity Feed
          <% end %>
        </li>        
        <li>
          <%= link_to edit_user_path(session[:user_id]) do %>
            <i class="icon-cog"></i>            
            Edit Profile
          <% end %>
        </li>
        <li>
          <%= link_to logout_path do %>
            <i class="icon-hand-left"></i>
            Logout
          <% end %>
        </li>
      </ul>
    </li>
  <% else %>
    <li><%= link_to 'Login', login_path, "data-toggle"=> "modal" %></li>
    <li><%= link_to 'Register', register_path %></li>
  <% end %>
</ul>
