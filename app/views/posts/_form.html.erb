<%= render 'shared/alert', alert: @post.errors %>

<div class= 'well span3 offset4'>
  <%= form_for @post do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>
    <br/>
    <%= f.label :url %>
    <%= f.text_field :url %>
    <br/>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5 %>
    <br/>

    <% Category.all.each do |category| %>
      <%= check_box_tag("post[category_ids][]", category.id, @post.categories.include?(category)) %>
      <%= category.name %>
    <% end %>
    <hr/>
    <br/>
    <%= f.submit(@post.new_record? ? 'Create Post' : 'Update Post', class: 'btn btn-info') %>
  <% end %>
</div>